<Page
    x:Class="rekenmachineprojectgroep.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:rekenmachineprojectgroep"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid RowSpacing="7" ColumnSpacing="7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='2' x:Name="knopNul" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Background="#FF495261">
            <TextBlock Text="0" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='3' x:Name="knopEen" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Background="#FF495261">
            <TextBlock Text="1" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='4' x:Name="knopTwee" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="2" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='5' x:Name="knopDrie" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="3" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='6' x:Name="knopVier" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="4" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='7' x:Name="knopVijf" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="5" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='8' x:Name="knopZes" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Background="#FF495261">
            <TextBlock Text="6" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='9' x:Name="knopZeven" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                        FocusVisualPrimaryBrush="#FF2020BE" BorderBrush="DarkGray" Background="#FF495261">
            <TextBlock Text="7" FontSize="80cm" FocusVisualPrimaryBrush="#FFF03290"/>
        </Button>
        <Button x:ConnectionId='10' x:Name="knopAcht" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="8" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='11' x:Name="knopNegen" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                        Background="#FF495261">
            <TextBlock Text="9" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='12' x:Name="knopPlus" Grid.Column="3" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="+" FontSize="80cm" HorizontalAlignment="Left" Margin="0,1,0,0" Width="55"/>
        </Button>
        <Button x:ConnectionId='13' x:Name="knopMin" Grid.Column="4" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Background="#FF495261">
            <TextBlock Text="-" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='14' x:Name="knopKeer" Grid.Column="3" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="x" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='15' x:Name="knopDeel" Grid.Column="4" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="÷" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='16' x:Name="knopEuro" Grid.Column="3" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="$>€" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='17' x:Name="knopDollar" Grid.Column="4" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                         Background="#FF495261">
            <TextBlock Text="€>$" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='18' x:Name="knopBereken" Grid.Column="3" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2"                          Background="#FF495261">
            <TextBlock Text="=" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='19' x:Name="knopKomma" Grid.Column="0" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                     Background="#FF495261">
            <TextBlock Text="," FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='20' x:Name="knopPlusmin" Grid.Column="2" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                          FocusVisualPrimaryBrush="#FF3E3E40" Background="#FF495261">
            <TextBlock Text="+/-" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='21' x:Name="knopPrencentage" Grid.Column="4" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                              Background="#FF495261">
            <TextBlock Text="%" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='22' x:Name="knopWis" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Background="#FF495261">
            <TextBlock Text="C" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='23' x:Name="knopWis1" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                       Background="#FF495261">
            <TextBlock Text="CE" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='24' x:Name="knopBinear" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                         Background="#FF495261">
            <TextBlock Text="bin" FontSize="80cm"/>
        </Button>
        <Button x:ConnectionId='25' x:Name="knopHex" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Background="#FF495261">
            <TextBlock Text="hex" FontSize="80cm" HorizontalAlignment="Left" Margin="0,1,0,0" Width="124"/>
        </Button>
        <TextBox x:ConnectionId='26' x:Name="resultbox" Text="" IsReadOnly="True" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="5" Grid.RowSpan="2" FontSize="80cm" TextWrapping="Wrap" TextAlignment="Right"                                     Background="#FF495261"/>
        <CaptureElement x:ConnectionId='27' Name="PreviewControl" Stretch="Uniform"/>
        <TextBox x:ConnectionId='28' x:Name="history" Text="" IsReadOnly="True" Grid.Column="0" Grid.ColumnSpan="5" FontSize="80cm" TextWrapping="Wrap" TextAlignment="Right"                                     Margin="-91,100,0,94" Grid.RowSpan="3"/>
        <CaptureElement  Stretch="Uniform"/>
    </Grid>

</Page>

